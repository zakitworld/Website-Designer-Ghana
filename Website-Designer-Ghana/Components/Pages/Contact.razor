@page "/contact"

<PageTitle>Contact Us - Website Designer in Ghana</PageTitle>

<!-- CONTACT HERO SECTION -->
<section class="contact-hero-section min-vh-100 d-flex align-items-center position-relative overflow-hidden">
    <div class="container">
        <div class="row align-items-center gy-5">
            <div class="col-lg-6 fade-in">
                <h1 class="display-2 fw-bold mb-4 lh-sm text-uppercase text-white">
                    CONTACT <span class="text-secondary">US</span>
                </h1>
                <p class="lead text-white text-opacity-75 mb-5" style="max-width: 600px;">
                    Get in touch with the best web designers in Ghana.
                </p>
                <div class="d-flex gap-3 mb-5 flex-wrap">
                    <a href="https://wa.me/233123456789" target="_blank"
                        class="btn btn-success btn-lg px-5 py-3 d-flex align-items-center gap-2">
                        <i class="bi bi-whatsapp fs-5"></i>
                        WHATSAPP
                    </a>
                    <a href="tel:+233123456789"
                        class="btn btn-secondary btn-lg px-5 py-3 d-flex align-items-center gap-2">
                        <i class="bi bi-telephone-fill fs-5"></i>
                        CALL US
                    </a>
                </div>
            </div>

            <div class="col-lg-6 fade-in">
                <div class="position-relative perspective-1000">
                    <div
                        class="position-absolute bg-primary rounded-circle blur-3 filter-blur opacity-20 w-75 h-75 top-0 end-0 translate-middle-y animate-float-slow">
                    </div>
                    <div
                        class="position-absolute bg-secondary rounded-circle blur-3 filter-blur opacity-20 w-50 h-50 bottom-0 start-0 translate-middle-y animate-float-reverse">
                    </div>

                    <div class="card bg-dark border-white border-opacity-10 shadow-lg transform-rotate-3d"
                        style="background-color: #0f172a !important;">
                        <div class="card-header bg-transparent border-bottom border-white border-opacity-10">
                            <div class="d-flex gap-2">
                                <span class="bg-secondary rounded-circle p-1" style="width:10px;height:10px;"></span>
                                <span class="bg-warning rounded-circle p-1" style="width:10px;height:10px;"></span>
                                <span class="bg-success rounded-circle p-1" style="width:10px;height:10px;"></span>
                            </div>
                        </div>
                        <div class="card-body font-monospace text-light p-4" style="font-size: 1rem;">
                            <div><span class="text-primary">&lt;contact</span> <span
                                    class="text-info">response</span>=<span class="text-success">"24hrs"</span> <span
                                    class="text-primary">&gt;</span></div>
                            <div class="ps-4"><span class="text-primary">&lt;support</span> <span
                                    class="text-info">type</span>=<span class="text-success">"dedicated"</span> <span
                                    class="text-primary">&gt;</span></div>
                            <div class="ps-5 text-white py-3 fs-5">We're Here to Help</div>
                            <div class="ps-4"><span class="text-primary">&lt;/support&gt;</span></div>
                            <div><span class="text-primary">&lt;/contact&gt;</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- GET IN TOUCH SECTION -->
<section class="py-5 bg-black">
    <div class="container py-5">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-4 text-white">Get in <span class="gradient-text">Touch</span></h2>
            <p class="lead text-secondary mx-auto" style="max-width: 900px;">
                Contact Website Designer in Ghana - best Web Designers in Ghana via email, call or book a consultation.
                We
                typically reply within 24hrs.
            </p>
        </div>

        <div class="row g-5 mt-4">
            <!-- Contact Form -->
            <div class="col-lg-7">
                <form class="contact-form glass-card p-4 p-md-5">
                    <div class="mb-4">
                        <label for="name" class="form-label fw-semibold text-secondary">Name</label>
                        <input type="text"
                            class="form-control form-control-lg bg-white bg-opacity-05 border-white border-opacity-10 text-white"
                            id="name" placeholder="Enter your name">
                    </div>
                    <div class="mb-4">
                        <label for="email" class="form-label fw-semibold text-secondary">Email</label>
                        <input type="email"
                            class="form-control form-control-lg bg-white bg-opacity-05 border-white border-opacity-10 text-white"
                            id="email" placeholder="Enter your email">
                    </div>
                    <div class="mb-4">
                        <label for="message" class="form-label fw-semibold text-secondary">Message</label>
                        <textarea
                            class="form-control form-control-lg bg-white bg-opacity-05 border-white border-opacity-10 text-white"
                            id="message" rows="6" placeholder="Enter your message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-lg px-5 py-3 fw-semibold">Send Message</button>
                </form>
            </div>

            <!-- Contact Information -->
            <div class="col-lg-5">
                <div class="card border-0 glass-card h-100">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="h4 fw-bold mb-4 text-white">Contact <span class="text-secondary">Information</span>
                        </h3>

                        <div class="d-flex align-items-start gap-3 mb-4">
                            <div class="d-flex align-items-center justify-content-center bg-secondary bg-opacity-10 rounded-circle flex-shrink-0"
                                style="width: 50px; height: 50px;">
                                <i class="bi bi-geo-alt-fill text-secondary fs-5"></i>
                            </div>
                            <div>
                                <p class="mb-0 text-secondary">Accra, Ghana</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-start gap-3 mb-4">
                            <div class="d-flex align-items-center justify-content-center bg-secondary bg-opacity-10 rounded-circle flex-shrink-0"
                                style="width: 50px; height: 50px;">
                                <i class="bi bi-telephone-fill text-secondary fs-5"></i>
                            </div>
                            <div>
                                <p class="mb-0 text-secondary">+233 123 456 789</p>
                            </div>
                        </div>

                        <div class="d-flex align-items-start gap-3 mb-4">
                            <div class="d-flex align-items-center justify-content-center bg-secondary bg-opacity-10 rounded-circle flex-shrink-0"
                                style="width: 50px; height: 50px;">
                                <i class="bi bi-envelope-fill text-secondary fs-5"></i>
                            </div>
                            <div>
                                <p class="mb-0 text-secondary">contact@websitedesignerghana.com</p>
                            </div>
                        </div>

                        <!-- Map Placeholder -->
                        <div class="mt-4 rounded overflow-hidden"
                            style="height: 250px; background: #1e293b; border: 1px solid rgba(255,255,255,0.1);">
                            <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d126846.33362443417!2d-0.2664308!3d5.6037168!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xfdf9084b2b7a773%3A0xbed14ed8650e2dd3!2sAccra%2C%20Ghana!5e0!3m2!1sen!2s!4v1234567890123!5m2!1sen!2s"
                                width="100%" height="100%" style="border:0; filter: invert(90%) hue-rotate(180deg);"
                                allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
                            </iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CONTACT METHODS SECTION -->
<section class="py-5 bg-dark">
    <div class="container py-5">
        <div class="row g-4">
            <!-- WhatsApp Card -->
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 glass-card h-100 text-center hover-lift">
                    <div class="card-body p-5">
                        <div class="d-flex align-items-center justify-content-center bg-success bg-opacity-10 rounded-circle mx-auto mb-4"
                            style="width: 80px; height: 80px;">
                            <i class="bi bi-whatsapp text-success" style="font-size: 2.5rem;"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-3 text-white">WhatsApp</h3>
                        <p class="text-secondary mb-4">Quick responses via WhatsApp</p>
                        <a href="https://wa.me/233123456789" target="_blank"
                            class="btn btn-success btn-lg px-5 py-3 fw-semibold">Chat Now</a>
                    </div>
                </div>
            </div>

            <!-- Schedule a Call Card -->
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 glass-card h-100 text-center hover-lift">
                    <div class="card-body p-5">
                        <div class="d-flex align-items-center justify-content-center bg-primary bg-opacity-10 rounded-circle mx-auto mb-4"
                            style="width: 80px; height: 80px;">
                            <i class="bi bi-calendar-check text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-3 text-white">Schedule a Call</h3>
                        <p class="text-secondary mb-4">Book a consultation session</p>
                        <a href="tel:+233123456789" class="btn btn-primary btn-lg px-5 py-3 fw-semibold">Book Now</a>
                    </div>
                </div>
            </div>

            <!-- Email Support Card -->
            <div class="col-md-6 col-lg-4">
                <div class="card border-0 glass-card h-100 text-center hover-lift">
                    <div class="card-body p-5">
                        <div class="d-flex align-items-center justify-content-center bg-secondary bg-opacity-10 rounded-circle mx-auto mb-4"
                            style="width: 80px; height: 80px;">
                            <i class="bi bi-envelope text-secondary" style="font-size: 2.5rem;"></i>
                        </div>
                        <h3 class="h4 fw-bold mb-3 text-white">Email Support</h3>
                        <p class="text-secondary mb-4">Get detailed responses via email</p>
                        <a href="mailto:contact@websitedesignerghana.com"
                            class="btn btn-secondary btn-lg px-5 py-3 fw-semibold">Send Email</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("refreshScrollAnimations");
        }
    }

    [Inject] IJSRuntime JS { get; set; }
}
