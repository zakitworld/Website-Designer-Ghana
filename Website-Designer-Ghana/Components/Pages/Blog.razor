@page "/blog"

<PageTitle>Blog - Website Designer Ghana</PageTitle>

<!-- BLOG HERO SECTION -->
<section class="blog-hero-section d-flex align-items-center position-relative overflow-hidden"
    style="padding-top: 150px; padding-bottom: 80px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center fade-in">
                <h1 class="display-3 fw-bold mb-4 text-white">Our Blog</h1>
                <p class="lead text-white text-opacity-75 mb-0" style="max-width: 700px; margin: 0 auto;">
                    Insights, tips, and updates on web design, development, and digital marketing in Ghana
                </p>
            </div>
        </div>
    </div>
</section>

<!-- BLOG POSTS SECTION -->
<section class="py-5 bg-black">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Main Content -->
            <div class="col-lg-8">
                <div class="row g-4">
                    <!-- Blog Post 1 -->
                    <div class="col-12">
                        <ArticleCard Image="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&q=80"
                            Author="Website Designer Ghana" Category="Web Design" Date="December 28, 2025"
                            Title="Domain and Hosting Prices in Ghana (2026)"
                            Excerpt="A comprehensive guide to current web hosting and domain registration costs in Ghana for businesses. Learn about different hosting types, pricing structures, and how to choose the best option for your website."
                            Link="/blog/domain-hosting-prices-ghana-2026" />
                    </div>

                    <!-- Blog Post 2 -->
                    <div class="col-12">
                        <ArticleCard Image="https://images.unsplash.com/photo-1563986768494-4dee2763ff3f?w=800&q=80"
                            Author="Website Designer Ghana" Category="E-commerce" Date="December 15, 2025"
                            Title="Top 5 E-commerce Payment Gateways in Ghana"
                            Excerpt="Reviewing Paystack, Flutterwave, Stripe and other payment options for Ghanaian online stores. Discover the best payment solutions that support mobile money and international cards for your e-commerce business."
                            Link="/blog/top-ecommerce-payment-gateways-ghana" />
                    </div>

                    <!-- Blog Post 3 -->
                    <div class="col-12">
                        <ArticleCard Image="https://images.unsplash.com/photo-1551434678-e076c223a692?w=800&q=80"
                            Author="Website Designer Ghana" Category="Business Growth" Date="November 30, 2025"
                            Title="Why Your Business Needs a Website in 2026"
                            Excerpt="In the digital age, having a professional online presence is crucial for credibility and growth. Learn how a website can help you reach more customers, build trust, and compete effectively in Ghana's digital marketplace."
                            Link="/blog/why-your-business-needs-website" />
                    </div>
                </div>

                <!-- Pagination -->
                <nav aria-label="Blog pagination" class="mt-5">
                    <ul class="pagination pagination-lg justify-content-center">
                        <li class="page-item active">
                            <a class="page-link bg-danger border-danger text-white" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link bg-white bg-opacity-05 border-white border-opacity-10 text-secondary"
                                href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link bg-white bg-opacity-05 border-white border-opacity-10 text-secondary"
                                href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link bg-white bg-opacity-05 border-white border-opacity-10 text-secondary"
                                href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Search Box -->
                <div class="card border-0 glass-card mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Search</h5>
                        <div class="input-group">
                            <input type="text"
                                class="form-control bg-white bg-opacity-05 border-white border-opacity-10 text-white"
                                placeholder="Search articles...">
                            <button class="btn btn-danger" type="button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Categories -->
