                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-danger hover-text-white transition-03">Marketing</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("refreshScrollAnimations");
        }
    }

    [Inject] IJSRuntime JS { get; set; }
}
