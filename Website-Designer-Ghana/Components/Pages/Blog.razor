@page "/blog"
@using Website_Designer_Ghana.Services.Interfaces
@using BlogPostModel = Website_Designer_Ghana.Data.Models.BlogPost
@using BlogCategoryModel = Website_Designer_Ghana.Data.Models.BlogCategory

<PageTitle>Blog - Website Designer in Ghana</PageTitle>

<!-- BLOG HERO SECTION -->
<section class="blog-hero-section d-flex align-items-center position-relative overflow-hidden"
    style="padding-top: 150px; padding-bottom: 80px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center fade-in">
                <h1 class="display-3 fw-bold mb-4 text-white">Our Blog</h1>
                <p class="lead text-white text-opacity-75 mb-0" style="max-width: 700px; margin: 0 auto;">
                    Insights, tips, and updates on web design, development, and digital marketing in Ghana
                </p>
            </div>
        </div>
    </div>
</section>

<!-- BLOG POSTS SECTION -->
<section class="py-5 bg-black">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Main Content -->
            <div class="col-lg-8">
                @if (blogPosts == null)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-secondary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-white mt-3">Loading blog posts...</p>
                    </div>
                }
                else if (!blogPosts.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox fs-1 text-secondary"></i>
                        <p class="text-white mt-3">No blog posts found.</p>
                    </div>
                }
                else
                {
                    <div class="row g-4">
                        @foreach (var post in blogPosts)
                        {
                            <div class="col-12">
                                <ArticleCard
                                    Image="@(post.FeaturedImage ?? "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&q=80")"
                                    Author="@post.Author"
                                    Category="@(post.Category?.Name ?? "Uncategorized")"
                                    Date="@post.PublishedAt?.ToString("MMMM dd, yyyy")"
                                    Title="@post.Title"
                                    Excerpt="@post.Summary"
                                    Link="@($"/blog/{post.Slug}")" />
                            </div>
                        }
                    </div>
                }

                <!-- Pagination -->
                <nav aria-label="Blog pagination" class="mt-5">
                    <ul class="pagination pagination-lg justify-content-center">
                        <li class="page-item active">
                            <a class="page-link bg-secondary border-secondary text-white" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link bg-white bg-opacity-05 border-white border-opacity-10 text-secondary"
                                href="#">2</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link bg-white bg-opacity-05 border-white border-opacity-10 text-secondary"
                                href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link bg-white bg-opacity-05 border-white border-opacity-10 text-secondary"
                                href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Search Box -->
                <div class="card border-0 glass-card mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Search</h5>
                        <div class="input-group">
                            <input type="text"
                                class="form-control bg-white bg-opacity-05 border-white border-opacity-10 text-white"
                                placeholder="Search articles...">
                            <button class="btn btn-secondary" type="button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Categories -->
                <div class="card border-0 glass-card mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Categories</h5>
                        <ul class="list-unstyled mb-0">
                            @if (categories != null && categories.Any())
                            {
                                @foreach (var category in categories)
                                {
                                    <li class="mb-2">
                                        <a href="@($"/blog?category={category.Slug}")"
                                            class="text-decoration-none text-secondary d-flex justify-content-between align-items-center hover-text-white">
                                            <span><i class="bi bi-folder text-secondary me-2"></i>@category.Name</span>
                                            <span class="badge bg-secondary">@category.Posts.Count()</span>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>

                <!-- Recent Posts -->
                <div class="card border-0 glass-card mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Recent Posts</h5>
                        <div class="recent-post-item mb-3 pb-3 border-bottom border-white border-opacity-10">
                            <a href="/blog/domain-hosting-prices-ghana-2026" class="text-decoration-none">
                                <h6 class="fw-semibold text-white mb-1 hover-text-secondary transition-03">Domain and
                                    Hosting Prices in Ghana</h6>
                                <small class="text-secondary text-opacity-75">December 28, 2025</small>
                            </a>
                        </div>
                        <div class="recent-post-item mb-3 pb-3 border-bottom border-white border-opacity-10">
                            <a href="/blog/top-ecommerce-payment-gateways-ghana" class="text-decoration-none">
                                <h6 class="fw-semibold text-white mb-1 hover-text-secondary transition-03">Top 5
                                    E-commerce
                                    Payment Gateways</h6>
                                <small class="text-secondary text-opacity-75">December 15, 2025</small>
                            </a>
                        </div>
                        <div class="recent-post-item">
                            <a href="/blog/why-your-business-needs-website" class="text-decoration-none">
                                <h6 class="fw-semibold text-white mb-1 hover-text-secondary transition-03">Why Your
                                    Business Needs a Website</h6>
                                <small class="text-secondary text-opacity-75">November 30, 2025</small>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Tags -->
                <div class="card border-0 glass-card">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Popular Tags</h5>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">WordPress</a>
                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">Hosting</a>
                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">SEO</a>
                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">E-commerce</a>
                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">Ghana</a>
                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">Web
                                Design</a>
                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">Payment</a>
                            <a href="#"
                                class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">Marketing</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Inject] private IBlogService BlogService { get; set; } = default!;
    [Inject] private IJSRuntime JS { get; set; } = default!;

    private IEnumerable<BlogPostModel>? blogPosts;
    private IEnumerable<BlogCategoryModel>? categories;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("refreshScrollAnimations");
        }
    }

    private async Task LoadDataAsync()
    {
        try
        {
            blogPosts = await BlogService.GetAllPostsAsync(publishedOnly: true);
            categories = await BlogService.GetAllCategoriesAsync();
        }
        catch (Exception ex)
        {
            // Log error - in production you'd log this properly
            Console.WriteLine($"Error loading blog data: {ex.Message}");
            blogPosts = new List<BlogPostModel>();
            categories = new List<BlogCategoryModel>();
        }
    }
}
