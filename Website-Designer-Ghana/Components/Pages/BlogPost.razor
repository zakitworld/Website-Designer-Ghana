@code {
    [Parameter] public string Slug { get; set; } = "";

    [Inject] private IBlogService BlogService { get; set; } = default!;
    [Inject] private IJSRuntime JS { get; set; } = default!;
    [Inject] private NavigationManager NavManager { get; set; } = default!;

    private BlogPostModel? blogPost;
    private string PostTitle = "Loading...";
    private string FeaturedImage = "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1200&q=80";
    private string Author = "Website Designer in Ghana";
    private string PublishDate = "";
    private string Category = "";
    private int ReadTime = 5;
    private string PostContent = "";
    private List<string> Tags = new();
    private string ShareUrl = "";
    private int CommentCount = 0;

    protected override async Task OnInitializedAsync()
    {
        ShareUrl = NavManager.Uri;
        await LoadBlogPostAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("refreshScrollAnimations");
        }
    }

    private async Task LoadBlogPostAsync()
    {
        try
        {
            blogPost = await BlogService.GetPostBySlugAsync(Slug);

            if (blogPost != null)
            {
                PostTitle = blogPost.Title;
                FeaturedImage = blogPost.FeaturedImage ?? "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1200&q=80";
                Author = blogPost.Author;
                PublishDate = blogPost.PublishedAt?.ToString("MMMM dd, yyyy") ?? "";
                Category = blogPost.Category?.Name ?? "Uncategorized";
                PostContent = blogPost.Content;
                Tags = blogPost.Tags.Select(t => t.Name).ToList();
                CommentCount = blogPost.Comments.Count();
                ReadTime = EstimateReadTime(blogPost.Content);

                // Increment view count
                await BlogService.IncrementViewCountAsync(blogPost.Id);
            }
            else
            {
                PostTitle = "Blog Post Not Found";
                PostContent = "<p>The blog post you're looking for doesn't exist. Please check the URL or return to the <a href='/blog'>blog homepage</a>.</p>";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading blog post: {ex.Message}");
            PostTitle = "Error Loading Post";
            PostContent = "<p>An error occurred while loading this post. Please try again later.</p>";
        }
    }

    private int EstimateReadTime(string content)
    {
        // Estimate reading time: average 200 words per minute
        var wordCount = content.Split(new[] { ' ', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries).Length;
        return Math.Max(1, (int)Math.Ceiling(wordCount / 200.0));
    }
}
