@page "/blog/{slug}"

<PageTitle>@PostTitle - Website Designer in Ghana Blog</PageTitle>

<!-- BLOG POST SECTION -->
<section class="py-5 bg-black" style="padding-top: 120px !important;">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Featured Image -->
                <div class="mb-4 rounded overflow-hidden border border-white border-opacity-10 shadow-lg">
                    <img src="@FeaturedImage" alt="@PostTitle" class="w-100" style="height: 450px; object-fit: cover;">
                </div>

                <!-- Post Meta -->
                <div class="d-flex flex-wrap gap-3 mb-4 text-secondary">
                    <span><i class="bi bi-person text-secondary me-2"></i>@Author</span>
                    <span><i class="bi bi-calendar text-secondary me-2"></i>@PublishDate</span>
                    <span><i class="bi bi-folder text-secondary me-2"></i>@Category</span>
                    <span><i class="bi bi-clock text-secondary me-2"></i>@ReadTime min read</span>
                </div>

                <!-- Post Title -->
                <h1 class="display-4 fw-bold mb-4 text-white">@PostTitle</h1>

                <!-- Post Content -->
                <div class="blog-post-content text-secondary fs-5 lh-lg">
                    @((MarkupString)PostContent)
                </div>

                <!-- Tags -->
                <div class="mt-5 pt-4 border-top border-white border-opacity-10">
                    <h6 class="fw-bold mb-3 text-white">Tags:</h6>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var tag in Tags)
                        {
                            <a href="#" class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">@tag</a>
                        }
                    </div>
                </div>

                <!-- Share Buttons -->
                <div class="mt-4 pt-4 border-top border-white border-opacity-10">
                    <h6 class="fw-bold mb-3 text-white">Share this article:</h6>
                    <div class="d-flex gap-2 flex-wrap">
                        <a href="https://www.facebook.com/sharer/sharer.php?u=@ShareUrl" target="_blank"
                           class="btn btn-primary d-flex align-items-center gap-2 px-4">
                            <i class="bi bi-facebook"></i> Facebook
                        </a>
                        <a href="https://twitter.com/intent/tweet?url=@ShareUrl&text=@PostTitle" target="_blank"
                           class="btn btn-dark d-flex align-items-center gap-2 px-4 border border-white border-opacity-10">
                            <i class="bi bi-twitter-x"></i> Twitter
                        </a>
                        <a href="https://www.linkedin.com/shareArticle?mini=true&url=@ShareUrl&title=@PostTitle" target="_blank"
                           class="btn btn-primary d-flex align-items-center gap-2 px-4" style="background-color: #0077b5;">
                            <i class="bi bi-linkedin"></i> LinkedIn
                        </a>
                        <a href="https://wa.me/?text=@PostTitle%20@ShareUrl" target="_blank"
                           class="btn btn-success d-flex align-items-center gap-2 px-4">
                            <i class="bi bi-whatsapp"></i> WhatsApp
                        </a>
                    </div>
                </div>

                <!-- Author Bio -->
                <div class="mt-5 p-4 glass-card rounded">
                    <div class="d-flex gap-4 flex-column flex-md-row align-items-center align-items-md-start">
                        <div class="flex-shrink-0">
                            <div class="bg-secondary rounded-circle text-white d-flex align-items-center justify-content-center fw-bold shadow-lg"
                                 style="width: 100px; height: 100px; font-size: 2.5rem;">
                                WDIG
                            </div>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-2 text-white text-center text-md-start">About Website Designer in Ghana</h5>
                            <p class="text-secondary mb-0 text-center text-md-start">
                                We are Ghana's leading web design and development company, specializing in creating stunning,
                                high-performance websites for businesses across Accra and beyond. With years of experience and a
                                passion for innovation, we help businesses establish a strong online presence.
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Comments Section -->
                <div class="mt-5 pt-5 border-top border-white border-opacity-10">
                    <h4 class="fw-bold mb-4 text-white">Comments (@CommentCount)</h4>

                    <!-- Sample Comments -->
                    <div class="comment-item mb-4 pb-4 border-bottom border-white border-opacity-10">
                        <div class="d-flex gap-3">
                            <div class="flex-shrink-0">
                                <div class="bg-primary bg-opacity-20 rounded-circle text-primary d-flex align-items-center justify-content-center fw-bold"
                                     style="width: 50px; height: 50px;">
                                    KA
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="fw-bold mb-0 text-white">Kwame Asante</h6>
                                        <small class="text-muted">January 2, 2026</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-secondary border-opacity-25">Reply</button>
                                </div>
                                <p class="text-secondary mb-0">
                                    Great article! Very informative and helpful. I learned a lot about hosting options in Ghana.
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="comment-item mb-4 pb-4 border-bottom border-white border-opacity-10">
                        <div class="d-flex gap-3">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-20 rounded-circle text-success d-flex align-items-center justify-content-center fw-bold"
                                     style="width: 50px; height: 50px;">
                                    AM
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="fw-bold mb-0 text-white">Ama Mensah</h6>
                                        <small class="text-muted">January 1, 2026</small>
                                    </div>
                                    <button class="btn btn-sm btn-outline-secondary border-opacity-25">Reply</button>
                                </div>
                                <p class="text-secondary mb-0">
                                    Thanks for sharing this! Would love to see more content about website security.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Leave a Reply -->
                <div class="mt-5 pt-4 border-top border-white border-opacity-10">
                    <h4 class="fw-bold mb-4 text-white">Leave a Reply</h4>
                    <form class="glass-card p-4 p-md-5 rounded">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label for="commentName" class="form-label text-secondary">Name *</label>
                                <input type="text" class="form-control form-control-lg bg-white bg-opacity-05 border-white border-opacity-10 text-white" id="commentName" required>
                            </div>
                            <div class="col-md-6">
                                <label for="commentEmail" class="form-label text-secondary">Email *</label>
                                <input type="email" class="form-control form-control-lg bg-white bg-opacity-05 border-white border-opacity-10 text-white" id="commentEmail" required>
                            </div>
                            <div class="col-12">
                                <label for="commentMessage" class="form-label text-secondary">Comment *</label>
                                <textarea class="form-control form-control-lg bg-white bg-opacity-05 border-white border-opacity-10 text-white" id="commentMessage" rows="5" required></textarea>
                            </div>
                            <div class="col-12 text-end">
                                <button type="submit" class="btn btn-secondary btn-lg px-5 fw-bold">Post Comment</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Search Box -->
                <div class="card border-0 glass-card mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Search</h5>
                        <div class="input-group">
                            <input type="text" class="form-control bg-white bg-opacity-05 border-white border-opacity-10 text-white" placeholder="Search articles...">
                            <button class="btn btn-secondary" type="button">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Categories -->
                <div class="card border-0 glass-card mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Categories</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-secondary d-flex justify-content-between align-items-center hover-text-white">
                                    <span><i class="bi bi-folder text-secondary me-2"></i>Web Design</span>
                                    <span class="badge bg-secondary">3</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-secondary d-flex justify-content-between align-items-center hover-text-white">
                                    <span><i class="bi bi-folder text-secondary me-2"></i>E-commerce</span>
                                    <span class="badge bg-secondary">2</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-secondary d-flex justify-content-between align-items-center hover-text-white">
                                    <span><i class="bi bi-folder text-secondary me-2"></i>Business Growth</span>
                                    <span class="badge bg-secondary">4</span>
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="#" class="text-decoration-none text-secondary d-flex justify-content-between align-items-center hover-text-white">
                                    <span><i class="bi bi-folder text-secondary me-2"></i>SEO Tips</span>
                                    <span class="badge bg-secondary">5</span>
                                </a>
                            </li>
                            <li>
                                <a href="#" class="text-decoration-none text-secondary d-flex justify-content-between align-items-center hover-text-white">
                                    <span><i class="bi bi-folder text-secondary me-2"></i>Digital Marketing</span>
                                    <span class="badge bg-secondary">3</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Recent Posts -->
                <div class="card border-0 glass-card mb-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Recent Posts</h5>
                        <div class="recent-post-item mb-3 pb-3 border-bottom border-white border-opacity-10">
                            <a href="/blog/domain-hosting-prices-ghana-2026" class="text-decoration-none">
                                <h6 class="fw-semibold text-white mb-1 hover-text-secondary transition-03">Domain and Hosting Prices in Ghana</h6>
                                <small class="text-secondary text-opacity-75">December 28, 2025</small>
                            </a>
                        </div>
                        <div class="recent-post-item mb-3 pb-3 border-bottom border-white border-opacity-10">
                            <a href="/blog/top-ecommerce-payment-gateways-ghana" class="text-decoration-none">
                                <h6 class="fw-semibold text-white mb-1 hover-text-secondary transition-03">Top 5 E-commerce Payment Gateways</h6>
                                <small class="text-secondary text-opacity-75">December 15, 2025</small>
                            </a>
                        </div>
                        <div class="recent-post-item">
                            <a href="/blog/why-your-business-needs-website" class="text-decoration-none">
                                <h6 class="fw-semibold text-white mb-1 hover-text-secondary transition-03">Why Your Business Needs a Website</h6>
                                <small class="text-secondary text-opacity-75">November 30, 2025</small>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Tags -->
                <div class="card border-0 glass-card">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3 text-white">Popular Tags</h5>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="#" class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">WordPress</a>
                            <a href="#" class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">Hosting</a>
                            <a href="#" class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">SEO</a>
                            <a href="#" class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">E-commerce</a>
                            <a href="#" class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">Ghana</a>
                            <a href="#" class="badge bg-white bg-opacity-05 text-secondary border border-white border-opacity-10 px-3 py-2 text-decoration-none hover-bg-secondary hover-text-white transition-03">Web Design</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    [Parameter] public string Slug { get; set; } = "";

    [Inject] IJSRuntime JS { get; set; }
    [Inject] NavigationManager NavManager { get; set; }

    private string PostTitle = "";
    private string FeaturedImage = "";
    private string Author = "Website Designer in Ghana";
    private string PublishDate = "";
    private string Category = "";
    private int ReadTime = 5;
    private string PostContent = "";
    private List<string> Tags = new();
    private string ShareUrl = "";
    private int CommentCount = 2;

    protected override void OnInitialized()
    {
        ShareUrl = NavManager.Uri;
        LoadBlogPost();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("refreshScrollAnimations");
        }
    }

    private void LoadBlogPost()
    {
        // In a real application, you would fetch this from a database or CMS
        // For now, we'll use hardcoded content based on the slug
        switch (Slug)
        {
            case "domain-hosting-prices-ghana-2026":
                PostTitle = "Domain and Hosting Prices in Ghana (2026)";
                FeaturedImage = "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1200&q=80";
                PublishDate = "December 28, 2025";
                Category = "Web Design";
                ReadTime = 8;
                Tags = new List<string> { "Hosting", "Domain", "Ghana", "Pricing", "Web Design" };
                PostContent = @"
                    <p class='lead'>Finding the right hosting and domain services at competitive prices is crucial for businesses in Ghana. This comprehensive guide breaks down the current pricing landscape and helps you make informed decisions.</p>

                    <h3 class='fw-bold mt-5 mb-3'>Understanding Domain Registration</h3>
                    <p>A domain name is your website's address on the internet. In Ghana, domain registration prices vary depending on the extension (.com, .gh, .com.gh, etc.) and the registrar you choose.</p>

                    <h4 class='fw-bold mt-4 mb-3'>Popular Domain Extensions in Ghana:</h4>
                    <ul>
                        <li><strong>.com domains:</strong> GHS 120 - 180 per year</li>
                        <li><strong>.gh domains:</strong> GHS 200 - 300 per year</li>
                        <li><strong>.com.gh domains:</strong> GHS 180 - 250 per year</li>
                        <li><strong>.org domains:</strong> GHS 150 - 200 per year</li>
                    </ul>

                    <h3 class='fw-bold mt-5 mb-3'>Web Hosting Options and Pricing</h3>
                    <p>Web hosting is where your website's files are stored. There are several types of hosting available, each suited for different needs and budgets.</p>

                    <h4 class='fw-bold mt-4 mb-3'>1. Shared Hosting</h4>
                    <p>Perfect for small businesses and startups. Your website shares server resources with other websites.</p>
                    <ul>
                        <li>Basic Plan: GHS 300 - 500 per year</li>
                        <li>Standard Plan: GHS 600 - 900 per year</li>
                        <li>Premium Plan: GHS 1,200 - 1,800 per year</li>
                    </ul>

                    <h4 class='fw-bold mt-4 mb-3'>2. VPS Hosting</h4>
                    <p>Ideal for growing businesses that need more resources and control.</p>
                    <ul>
                        <li>Entry Level: GHS 2,400 - 3,600 per year</li>
                        <li>Mid-tier: GHS 4,800 - 7,200 per year</li>
                        <li>High-end: GHS 9,600+ per year</li>
                    </ul>

                    <h4 class='fw-bold mt-4 mb-3'>3. Dedicated Hosting</h4>
                    <p>Best for large e-commerce sites and high-traffic websites.</p>
                    <ul>
                        <li>Starting from GHS 15,000 per year</li>
                    </ul>

                    <h3 class='fw-bold mt-5 mb-3'>Recommended Hosting Providers for Ghana</h3>
                    <p>When choosing a hosting provider, consider factors like uptime, customer support, server location, and local payment options (mobile money support).</p>

                    <div class='alert alert-info mt-4'>
                        <strong>Pro Tip:</strong> Look for hosting providers with servers in or near Ghana for better website loading speeds for your local audience.
                    </div>

                    <h3 class='fw-bold mt-5 mb-3'>Making the Right Choice</h3>
                    <p>Consider these factors when selecting your hosting and domain:</p>
                    <ul>
                        <li>Your website's expected traffic</li>
                        <li>Storage and bandwidth requirements</li>
                        <li>Technical support availability</li>
                        <li>Scalability options as your business grows</li>
                        <li>Security features (SSL certificates, backups)</li>
                    </ul>

                    <p class='mt-4'><strong>Need help choosing the right hosting for your business?</strong> Contact Website Designer in Ghana for personalized recommendations and setup assistance.</p>
                ";
                break;

            case "top-ecommerce-payment-gateways-ghana":
                PostTitle = "Top 5 E-commerce Payment Gateways in Ghana";
                FeaturedImage = "https://images.unsplash.com/photo-1563986768494-4dee2763ff3f?w=1200&q=80";
                PublishDate = "December 15, 2025";
                Category = "E-commerce";
                ReadTime = 10;
                Tags = new List<string> { "E-commerce", "Payment Gateways", "Ghana", "Paystack", "Flutterwave" };
                PostContent = @"
                    <p class='lead'>Selecting the right payment gateway is critical for your e-commerce success in Ghana. This guide reviews the top payment solutions that support both local and international transactions.</p>

                    <h3 class='fw-bold mt-5 mb-3'>1. Paystack</h3>
                    <p>One of the most popular payment gateways in Ghana, Paystack offers seamless integration and supports mobile money payments.</p>
                    <ul>
                        <li><strong>Transaction Fee:</strong> 1.95% + GHS 0.50</li>
                        <li><strong>Supports:</strong> Visa, Mastercard, Mobile Money (MTN, Vodafone, AirtelTigo)</li>
                        <li><strong>Integration:</strong> Easy API integration with plugins for major platforms</li>
                    </ul>

                    <h3 class='fw-bold mt-5 mb-3'>2. Flutterwave</h3>
                    <p>A comprehensive payment solution supporting multiple African currencies and payment methods.</p>
                    <ul>
                        <li><strong>Transaction Fee:</strong> 3.8%</li>
                        <li><strong>Supports:</strong> Cards, Mobile Money, Bank Transfers</li>
                        <li><strong>Features:</strong> Multi-currency support, recurring payments</li>
                    </ul>

                    <h3 class='fw-bold mt-5 mb-3'>3. Stripe</h3>
                    <p>Global payment platform now available in Ghana, ideal for businesses targeting international customers.</p>

                    <h3 class='fw-bold mt-5 mb-3'>Choosing the Right Gateway</h3>
                    <p>Consider transaction fees, customer preferences, integration ease, and supported payment methods when making your choice.</p>
                ";
                break;

            case "why-your-business-needs-website":
                PostTitle = "Why Your Business Needs a Website in 2026";
                FeaturedImage = "https://images.unsplash.com/photo-1551434678-e076c223a692?w=1200&q=80";
                PublishDate = "November 30, 2025";
                Category = "Business Growth";
                ReadTime = 6;
                Tags = new List<string> { "Business", "Website", "Digital Marketing", "Ghana", "Online Presence" };
                PostContent = @"
                    <p class='lead'>In today's digital-first world, a professional website is no longer optionalâ€”it's essential for business success in Ghana and beyond.</p>

                    <h3 class='fw-bold mt-5 mb-3'>24/7 Online Presence</h3>
                    <p>Unlike physical stores with fixed hours, your website works around the clock, allowing customers to learn about your products and services anytime, anywhere.</p>

                    <h3 class='fw-bold mt-5 mb-3'>Build Credibility and Trust</h3>
                    <p>Customers expect legitimate businesses to have a professional online presence. A well-designed website builds trust and establishes your credibility in the market.</p>

                    <h3 class='fw-bold mt-5 mb-3'>Reach More Customers</h3>
                    <p>Expand beyond your local area and reach customers across Ghana and internationally. Your website breaks geographical barriers.</p>

                    <h3 class='fw-bold mt-5 mb-3'>Cost-Effective Marketing</h3>
                    <p>Digital marketing through your website is more affordable and measurable than traditional advertising methods.</p>

                    <h3 class='fw-bold mt-5 mb-3'>Showcase Your Products/Services</h3>
                    <p>Display your offerings with high-quality images, detailed descriptions, and customer testimonials to attract and convert visitors.</p>

                    <div class='alert alert-success mt-4'>
                        <strong>Ready to take your business online?</strong> Contact Website Designer in Ghana today for a free consultation and quote.
                    </div>
                ";
                break;

            default:
                PostTitle = "Blog Post Not Found";
                FeaturedImage = "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1200&q=80";
                PublishDate = "January 1, 2026";
                Category = "Uncategorized";
                PostContent = "<p>The blog post you're looking for doesn't exist. Please check the URL or return to the <a href='/blog'>blog homepage</a>.</p>";
                break;
        }
    }
}
