@page "/admin/courses"
@using Microsoft.AspNetCore.Authorization
@using Website_Designer_Ghana.Services.Interfaces
@using Website_Designer_Ghana.Data.Models
@attribute [Authorize(Roles = "Admin")]
@layout AdminLayout

<PageTitle>Course Management - Admin</PageTitle>

<div class="courses-admin pt-3">
    <div class="row mb-5 align-items-center">
        <div class="col">
            <h2 class="display-6 fw-bold gradient-text mb-1">Course Management</h2>
            <p class="text-muted mb-0">Manage and organize your educational content.</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary border-0 shadow-lg px-4 py-2 ripple-effect">
                <i class="bi bi-plus-circle me-2"></i>
                Create Course
            </button>
        </div>
    </div>

    <div class="glass-card border-0 shadow-lg overflow-hidden">
        <div class="p-0">
            @if (courses == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!courses.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-book fs-1 text-muted mb-3 d-block"></i>
                    <p class="text-muted mb-0">No courses yet. Start your academy!</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="bg-white bg-opacity-05">
                            <tr>
                                <th class="px-4 py-3 text-muted fw-semibold border-opacity-10">Course Info</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Level</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10 text-center">Lessons</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Status</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Pricing</th>
                                <th class="px-4 py-3 text-muted fw-semibold border-opacity-10 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in courses)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <div class="text-white fw-bold">@course.Title</div>
                                        <small class="text-muted">Created @course.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-opacity-10 bg-info text-info rounded-pill px-3">@course.Level</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="text-white opacity-75">@course.Lessons.Count()</span>
                                    </td>
                                    <td>
                                        @if (course.IsPublished)
                                        {
                                            <span class="badge bg-opacity-10 bg-success text-success rounded-pill px-3">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-opacity-10 bg-warning text-warning rounded-pill px-3">Draft</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="text-white fw-bold">GHâ‚µ @course.Price.ToString("N2")</div>
                                    </td>
                                    <td class="px-4 text-end">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-light border-opacity-10 px-3 shadow-sm ripple-effect">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button" class="btn btn-outline-danger border-opacity-10 px-3 shadow-sm ripple-effect ms-1">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-dark { --bs-table-bg: transparent; }
    .table > :not(caption) > * > * { border-bottom-color: rgba(255,255,255,0.05); }
</style>

@code {
    [Inject] private ICourseService CourseService { get; set; } = default!;

    private IEnumerable<Course>? courses;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            courses = await CourseService.GetAllCoursesAsync(publishedOnly: false);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading courses: {ex.Message}");
            courses = new List<Course>();
        }
    }
}
