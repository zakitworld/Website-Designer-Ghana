@page "/admin/blog-posts"
@using Microsoft.AspNetCore.Authorization
@using Website_Designer_Ghana.Services.Interfaces
@using Website_Designer_Ghana.Data.Models
@attribute [Authorize(Roles = "Admin")]
@layout AdminLayout

<PageTitle>Manage Blog Posts - Admin</PageTitle>

<div class="blog-posts-admin pt-3">
    <div class="row mb-5 align-items-center">
        <div class="col">
            <h2 class="display-6 fw-bold gradient-text mb-1">Blog Posts</h2>
            <p class="text-muted mb-0">Manage and polish your digital narratives.</p>
        </div>
        <div class="col-auto">
            <a href="/admin/blog-posts/create" class="btn btn-primary px-4 py-2 border-0 shadow-lg ripple-effect">
                <i class="bi bi-plus-lg me-2"></i>
                Create New Post
            </a>
        </div>
    </div>

    @if (showSuccessMessage)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => showSuccessMessage = false"></button>
        </div>
    }

    <div class="glass-card border-0 shadow-lg overflow-hidden">
        <div class="p-0">
            @if (blogPosts == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!blogPosts.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-file-earmark-plus fs-1 text-muted mb-3 d-block"></i>
                    <p class="text-muted mb-4">No blog posts yet. Start by creating your first post!</p>
                    <a href="/admin/blog-posts/create" class="btn btn-outline-primary px-4">Create First Post</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="bg-white bg-opacity-05">
                            <tr>
                                <th class="px-4 py-3 text-muted fw-semibold border-opacity-10">Title</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Category</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Author</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Status</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Views</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Published</th>
                                <th class="px-4 py-3 text-muted fw-semibold border-opacity-10 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var post in blogPosts)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <div class="fw-bold text-white mb-0">@post.Title</div>
                                        <small class="text-muted">@post.Slug</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-opacity-10 bg-info text-info rounded-pill px-3">
                                            @(post.Category?.Name ?? "Uncategorized")
                                        </span>
                                    </td>
                                    <td class="text-secondary">@post.Author</td>
                                    <td>
                                        @if (post.IsPublished)
                                        {
                                            <span class="badge bg-opacity-10 bg-success text-success rounded-pill px-3">
                                                <i class="bi bi-check-circle me-1"></i> Published
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-opacity-10 bg-warning text-warning rounded-pill px-3">
                                                <i class="bi bi-pencil-square me-1"></i> Draft
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-white fw-medium">@post.ViewCount.ToString("N0")</span>
                                    </td>
                                    <td class="text-muted">@post.PublishedAt?.ToString("MMM dd, yyyy")</td>
                                    <td class="px-4 text-end">
                                        <div class="btn-group shadow-sm">
                                            <a href="/admin/blog-posts/edit/@post.Id"
                                                class="btn btn-outline-light btn-sm border-opacity-10" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="/blog/@post.Slug" target="_blank"
                                                class="btn btn-outline-light btn-sm border-opacity-10" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger btn-sm border-opacity-10"
                                            @onclick="() => DeletePost(post.Id)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table-dark {
        --bs-table-bg: transparent;
    }

    .table> :not(caption)>*>* {
        border-bottom-color: rgba(255, 255, 255, 0.05);
    }

    .badge {
        font-weight: 500;
        letter-spacing: 0.3px;
    }
</style>

@code {
    [Inject] private IBlogService BlogService { get; set; } = default!;
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private IEnumerable<BlogPost>? blogPosts;
    private bool showSuccessMessage = false;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            blogPosts = (await BlogService.GetAllPostsAsync(publishedOnly: false))
            .OrderByDescending(p => p.CreatedAt);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading blog posts: {ex.Message}");
            blogPosts = new List<BlogPost>();
        }
    }

    private async Task DeletePost(int postId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this blog post?"))
        {
            try
            {
                await BlogService.DeletePostAsync(postId);
                successMessage = "Blog post deleted successfully.";
                showSuccessMessage = true;
                await LoadDataAsync();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting blog post: {ex.Message}");
            }
        }
    }

    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
}
