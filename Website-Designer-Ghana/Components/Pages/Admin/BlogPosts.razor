@page "/admin/blog-posts"
@using Microsoft.AspNetCore.Authorization
@using Website_Designer_Ghana.Services.Interfaces
@using Website_Designer_Ghana.Data.Models
@attribute [Authorize(Roles = "Admin")]
@layout AdminLayout

<PageTitle>Manage Blog Posts - Admin</PageTitle>

<div class="blog-posts-admin">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-0">Blog Posts</h2>
            <p class="text-muted">Manage your blog content</p>
        </div>
        <div class="col-auto">
            <a href="/admin/blog-posts/create" class="btn btn-secondary">
                <i class="bi bi-plus-circle me-2"></i>
                Create New Post
            </a>
        </div>
    </div>

    @if (showSuccessMessage)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => showSuccessMessage = false"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (blogPosts == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-secondary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!blogPosts.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted"></i>
                    <p class="text-muted mt-3">No blog posts yet. Create your first post!</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Status</th>
                                <th>Views</th>
                                <th>Published</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var post in blogPosts)
                            {
                                <tr>
                                    <td>
                                        <a href="/blog/@post.Slug" target="_blank" class="text-decoration-none">
                                            @post.Title
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            @(post.Category?.Name ?? "Uncategorized")
                                        </span>
                                    </td>
                                    <td>@post.Author</td>
                                    <td>
                                        @if (post.IsPublished)
                                        {
                                            <span class="badge bg-success">Published</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Draft</span>
                                        }
                                    </td>
                                    <td>@post.ViewCount</td>
                                    <td>@post.PublishedAt?.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/admin/blog-posts/edit/@post.Id" class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger"
                                                @onclick="() => DeletePost(post.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Inject] private IBlogService BlogService { get; set; } = default!;
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private IEnumerable<BlogPost>? blogPosts;
    private bool showSuccessMessage = false;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            blogPosts = (await BlogService.GetAllPostsAsync(publishedOnly: false))
                .OrderByDescending(p => p.CreatedAt);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading blog posts: {ex.Message}");
            blogPosts = new List<BlogPost>();
        }
    }

    private async Task DeletePost(int postId)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this blog post?"))
        {
            try
            {
                await BlogService.DeletePostAsync(postId);
                successMessage = "Blog post deleted successfully.";
                showSuccessMessage = true;
                await LoadDataAsync();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting blog post: {ex.Message}");
            }
        }
    }

    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
}
