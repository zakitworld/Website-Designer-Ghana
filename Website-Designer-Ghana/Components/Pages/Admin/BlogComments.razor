@page "/admin/blog-comments"
@using Microsoft.AspNetCore.Authorization
@using Website_Designer_Ghana.Services.Interfaces
@using Website_Designer_Ghana.Data.Models
@attribute [Authorize(Roles = "Admin")]
@layout AdminLayout
@rendermode InteractiveServer

<PageTitle>Blog Comments - Admin</PageTitle>

<div class="blog-comments-admin pt-3">
    <div class="row mb-5 align-items-center">
        <div class="col">
            <h2 class="display-6 fw-bold gradient-text mb-1">Blog Comments</h2>
            <p class="text-muted mb-0">Manage community feedback and maintain quality discussions.</p>
        </div>
    </div>

    @if (showSuccessMessage)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => showSuccessMessage = false"></button>
        </div>
    }

    <div class="glass-card border-0 shadow-lg overflow-hidden">
        <div class="p-0">
            @if (comments == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!comments.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-chat-dots fs-1 text-muted mb-3 d-block"></i>
                    <p class="text-muted mb-0">No comments found.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="bg-white bg-opacity-05">
                            <tr>
                                <th class="px-4 py-3 text-muted fw-semibold border-opacity-10">Author</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Comment</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Post</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Status</th>
                                <th class="px-4 py-3 text-muted fw-semibold border-opacity-10 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in comments)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <div class="fw-bold text-white">@comment.AuthorName</div>
                                        <small class="text-muted d-block">@comment.AuthorEmail</small>
                                        <small class="text-muted">@comment.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td class="py-3">
                                        <p class="mb-0 text-white opacity-75 small">
                                            @(comment.Content.Length > 100 ? comment.Content.Substring(0, 100) + "..." : comment.Content)
                                        </p>
                                    </td>
                                    <td>
                                        <span class="text-info small">
                                            @(comment.BlogPost?.Title ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        @if (comment.IsApproved)
                                        {
                                            <span class="badge bg-opacity-10 bg-success text-success rounded-pill px-3">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-opacity-10 bg-warning text-warning rounded-pill px-3">Pending</span>
                                        }
                                    </td>
                                    <td class="px-4 text-end">
                                        <div class="btn-group shadow-sm">
                                            @if (!comment.IsApproved)
                                            {
                                                <button type="button" class="btn btn-outline-success btn-sm border-opacity-10"
                                                @onclick="() => ApproveComment(comment.Id)" title="Approve">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            }
                                            <button type="button" class="btn btn-outline-danger btn-sm border-opacity-10"
                                            @onclick="() => DeleteComment(comment.Id)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>


