@page "/admin/portfolios"
@using Microsoft.AspNetCore.Authorization
@using Website_Designer_Ghana.Services.Interfaces
@using Website_Designer_Ghana.Data.Models
@using Website_Designer_Ghana.Models.Admin
@attribute [Authorize(Roles = "Admin")]
@layout AdminLayout
@rendermode InteractiveServer

<PageTitle>Portfolio Management - Admin</PageTitle>

<div class="portfolios-admin pt-3">
    <div class="row mb-5 align-items-center">
        <div class="col">
            <h2 class="display-6 fw-bold gradient-text mb-1">Portfolio Showcase</h2>
            <p class="text-muted mb-0">Highlight your agency's best achievements.</p>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-primary border-0 shadow-lg px-4 py-2 ripple-effect"
                @onclick="ShowCreateModal">
                <i class="bi bi-plus-circle me-2"></i>
                New Project
            </button>
        </div>
    </div>

    <div class="glass-card border-0 shadow-lg overflow-hidden">
        <div class="p-0">
            @if (portfolios == null)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            }
            else if (!portfolios.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-trophy fs-1 text-muted mb-3 d-block"></i>
                    <p class="text-muted mb-0">No projects yet. Showcase your work!</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="bg-white bg-opacity-05">
                            <tr>
                                <th class="px-4 py-3 text-muted fw-semibold border-opacity-10">Project</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Client</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Category</th>
                                <th class="py-3 text-muted fw-semibold border-opacity-10">Status</th>
                                <th class="px-4 py-3 text-muted fw-semibold border-opacity-10 text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Website_Designer_Ghana.Data.Models.Portfolio portfolio in portfolios)
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <div class="text-white fw-bold">@portfolio.Title</div>
                                        <small class="text-muted">Added @portfolio.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td class="text-white opacity-75">@(portfolio.ClientName ?? "N/A")</td>
                                    <td>
                                        <span class="badge bg-opacity-10 bg-secondary text-secondary rounded-pill px-3">
                                            @(portfolio.Category?.Name ?? "Uncategorized")
                                        </span>
                                    </td>
                                    <td>
                                        @if (portfolio.IsPublished)
                                        {
                                            <span class="badge bg-opacity-10 bg-success text-success rounded-pill px-3">Live</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-opacity-10 bg-warning text-warning rounded-pill px-3">Draft</span>
                                        }
                                    </td>
                                    <td class="px-4 text-end">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button"
                                                class="btn btn-outline-light border-opacity-10 px-3 shadow-sm ripple-effect"
                                            @onclick="() => EditPortfolio(portfolio)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="button"
                                                class="btn btn-outline-danger border-opacity-10 px-3 shadow-sm ripple-effect ms-1"
                                            @onclick="() => DeletePortfolio(portfolio.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@if (showSuccessMessage)
{
    <div class="position-fixed top-0 start-50 translate-middle-x mt-5 px-3" style="z-index: 9999;">
        <div class="alert alert-success alert-dismissible fade show shadow-lg" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => showSuccessMessage = false"></button>
        </div>
    </div>
}

@if (showErrorMessage)
{
    <div class="position-fixed top-0 start-50 translate-middle-x mt-5 px-3" style="z-index: 9999;">
        <div class="alert alert-danger alert-dismissible fade show shadow-lg" role="alert">
            <strong>Error!</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="() => showErrorMessage = false"></button>
        </div>
    </div>
}

<!-- Create/Edit Modal -->
@if (showModal)
{
    <div class="modal show d-block" tabindex="-1"
        style="background: rgba(0,0,0,0.8); backdrop-filter: blur(8px); z-index: 1055; pointer-events: auto;">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content bg-transparent border-0">
                <div class="glass-card border-0 shadow-2xl w-100 overflow-hidden">
                    <div
                        class="p-4 border-bottom border-white border-opacity-10 d-flex justify-content-between align-items-center">
                        <h5 class="modal-title fw-bold text-white mb-0">
                            <i class="bi bi-briefcase text-primary me-2"></i>
                            @(editingPortfolio != null ? "Edit" : "Create") Portfolio Project
                        </h5>
                        <button type="button" class="btn-close btn-close-white opacity-50" @onclick="CloseModal"></button>
                    </div>
                    <EditForm Model="@model" OnValidSubmit="@HandleSubmit">
                        <DataAnnotationsValidator />
                        <div class="p-4" style="max-height: 70vh; overflow-y: auto;">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label text-secondary small text-uppercase fw-bold">Title</label>
                                    <InputText @bind-Value="model.Title"
                                        class="form-control bg-dark bg-opacity-50 border-white border-opacity-10 text-white"
                                        placeholder="Project Name" />
                                    <ValidationMessage For="@(() => model.Title)" class="text-danger small mt-1" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-secondary small text-uppercase fw-bold">Slug</label>
                                    <InputText @bind-Value="model.Slug"
                                        class="form-control bg-dark bg-opacity-50 border-white border-opacity-10 text-white"
                                        placeholder="project-url" />
                                    <ValidationMessage For="@(() => model.Slug)" class="text-danger small mt-1" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-secondary small text-uppercase fw-bold">Category</label>
                                    <InputSelect @bind-Value="model.CategoryId"
                                        class="form-select bg-dark bg-opacity-50 border-white border-opacity-10 text-white">
                                        <option value="">Select category</option>
                                        @if (categories != null)
                                        {
                                            @foreach (var cat in categories)
                                            {
                                                <option value="@cat.Id">@cat.Name</option>
                                            }
                                        }
                                    </InputSelect>
                                </div>
                                <div class="col-12">
                                    <label
                                        class="form-label text-secondary small text-uppercase fw-bold">Description</label>
                                    <InputTextArea @bind-Value="model.Description"
                                        class="form-control bg-dark bg-opacity-50 border-white border-opacity-10 text-white"
                                        rows="2" placeholder="Brief description" />
                                    <ValidationMessage For="@(() => model.Description)" class="text-danger small mt-1" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-secondary small text-uppercase fw-bold">Client
                                        Name</label>
                                    <InputText @bind-Value="model.ClientName"
                                        class="form-control bg-dark bg-opacity-50 border-white border-opacity-10 text-white"
                                        placeholder="Client Name" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-secondary small text-uppercase fw-bold">Project
                                        URL</label>
                                    <InputText @bind-Value="model.ProjectUrl"
                                        class="form-control bg-dark bg-opacity-50 border-white border-opacity-10 text-white"
                                        placeholder="https://..." />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-secondary small text-uppercase fw-bold">Featured Image
                                        URL</label>
                                    <InputText @bind-Value="model.FeaturedImage"
                                        class="form-control bg-dark bg-opacity-50 border-white border-opacity-10 text-white"
                                        placeholder="https://..." />
                                    <ValidationMessage For="@(() => model.FeaturedImage)" class="text-danger small mt-1" />
                                </div>
                                <div class="col-md-6">
                                    <label
                                        class="form-label text-secondary small text-uppercase fw-bold">Technologies</label>
                                    <InputText @bind-Value="model.Technologies"
                                        class="form-control bg-dark bg-opacity-50 border-white border-opacity-10 text-white"
                                        placeholder="React, Node.js, etc." />
                                </div>
                                <div class="col-12">
                                    <div class="form-check form-switch">
                                        <InputCheckbox @bind-Value="model.IsPublished" class="form-check-input"
                                            id="isPublished" />
                                        <label class="form-check-label text-white ms-2" for="isPublished">Publish
                                            Project</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div
                            class="p-4 bg-black bg-opacity-50 border-top border-white border-opacity-10 d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-outline-light border-opacity-10 px-4"
                            @onclick="CloseModal">Cancel</button>
                            <button type="submit" class="btn btn-primary px-4 border-0 shadow-lg" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                @(editingPortfolio != null ? "Save Changes" : "Create Project")
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}


