<div class="text-center mb-5 scroll-animate">
    @if (!string.IsNullOrEmpty(Subtitle))
    {
        <span class="d-block text-primary fw-bold text-uppercase small mb-2 letter-spacing-2">@Subtitle</span>
    }
    <h2 class="display-5 fw-bold text-white mb-3">@Title</h2>
    <div class="mx-auto" style="width: 60px; height: 4px; background: var(--gradient-primary); border-radius: 2px;">
    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Subtitle { get; set; } = "";
}

<style>
    .letter-spacing-2 {
        letter-spacing: 2px;
    }
</style>
