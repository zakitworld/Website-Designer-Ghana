<div class="accordion-item bg-transparent border-0 border-bottom border-white border-opacity-10">
    <h2 class="accordion-header">
        <button class="accordion-button collapsed bg-transparent text-white shadow-none py-4" type="button"
            data-bs-toggle="collapse" data-bs-target="#faq-@Id" aria-expanded="false" aria-controls="faq-@Id">
            <span class="fs-5 fw-medium me-3">@Question</span>
        </button>
    </h2>
    <div id="faq-@Id" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
        <div class="accordion-body text-secondary pb-4">
            @Answer
        </div>
    </div>
</div>

@code {
    [Parameter] public string Question { get; set; } = "";
    [Parameter] public RenderFragment Answer { get; set; }

    private string Id { get; set; } = Guid.NewGuid().ToString("N");
}

<style>
    .accordion-button::after {
        filter: invert(1);
        transform: scale(0.7);
    }

    .accordion-button:not(.collapsed) {
        color: var(--bs-primary) !important;
        box-shadow: none;
    }

    .accordion-button:not(.collapsed)::after {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%230d6efd'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
        transform: rotate(180deg) scale(0.7);
    }
</style>
