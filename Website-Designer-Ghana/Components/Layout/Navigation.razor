@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager

<!-- Bootstrap Navbar -->
<nav class="navbar navbar-expand-lg fixed-top navbar-light bg-white shadow-sm">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center gap-2" href="#home">
            <img src="images/webdesigner.png" alt="WDG" height="40" width="auto">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item">
                    <a class="nav-link fw-medium @GetActiveClass("/")" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="/#about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="/#services">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium @GetActiveClass("/courses")" href="/courses">Courses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium @GetActiveClass("/pricing")" href="/pricing">Pricing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium" href="/#portfolio">Portfolio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-medium @GetActiveClass("/blog")" href="/blog">Blog</a>
                </li>
                <li class="nav-item ms-lg-3">
                    <a class="btn @GetContactButtonClass() px-4 fw-medium text-white" href="/contact">Contact Us</a>
                </li>

                <div class="d-lg-none my-3 border-top border-secondary pt-3">
                    <AuthorizeView>
                        <Authorized>
                            <AuthorizeView Roles="Admin" Context="adminContext">
                                <Authorized>
                                    <a href="/admin" class="d-block mb-2 text-decoration-none text-secondary">
                                        <i class="bi bi-gear-fill me-1"></i>Admin Dashboard
                                    </a>
                                </Authorized>
                            </AuthorizeView>
                            <a href="Account/Manage" class="d-block mb-2 text-decoration-none text-secondary">My
                                Account</a>
                            <form action="Account/Logout" method="post">
                                <AntiforgeryToken />
                                <input type="hidden" name="ReturnUrl" value="" />
                                <button type="submit"
                                    class="btn btn-link p-0 text-secondary text-decoration-none">Logout</button>
                            </form>
                        </Authorized>
                        <NotAuthorized>
                            <a href="Account/Login" class="d-block text-decoration-none text-secondary">Client Login</a>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </ul>

            <div class="d-none d-lg-flex ms-3 ps-3 border-start border-secondary align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <AuthorizeView Roles="Admin" Context="adminContext">
                            <Authorized>
                                <a href="/admin" class="text-decoration-none text-secondary small me-3">
                                    <i class="bi bi-gear-fill me-1"></i>Admin Dashboard
                                </a>
                            </Authorized>
                        </AuthorizeView>
                        <a href="Account/Manage" class="text-decoration-none text-secondary small me-3">My Account</a>
                        <form action="Account/Logout" method="post" style="display:inline;">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="" />
                            <button type="submit"
                                class="btn btn-link p-0 text-secondary small text-decoration-none">Logout</button>
                        </form>
                    </Authorized>
                    <NotAuthorized>
                        <a href="Account/Login" class="text-decoration-none text-secondary small">Client Login</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </div>
</nav>

@code {
    private string GetActiveClass(string path)
    {
        var currentPath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);

        // Remove query string and hash if present
        currentPath = currentPath.Split('?')[0].Split('#')[0];

        // Normalize paths
        if (string.IsNullOrEmpty(currentPath))
            currentPath = "/";
        else if (!currentPath.StartsWith("/"))
            currentPath = "/" + currentPath;

        // Check if paths match
        bool isActive = currentPath.Equals(path, StringComparison.OrdinalIgnoreCase);

        return isActive ? "active text-secondary" : "";
    }

    private string GetContactButtonClass()
    {
        var currentPath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        currentPath = currentPath.Split('?')[0].Split('#')[0];

        if (string.IsNullOrEmpty(currentPath))
            currentPath = "/";
        else if (!currentPath.StartsWith("/"))
            currentPath = "/" + currentPath;

        bool isActive = currentPath.Equals("/contact", StringComparison.OrdinalIgnoreCase);

        return isActive ? "btn-secondary" : "btn-primary";
    }
}
